<header class="site-header" id="siteHeader">
    <a class="site-brand" href="/" aria-label="Accueil E-co Plaisance">
        <img src="/logo-ligne.png" alt="E-co Plaisance" class="site-logo">
    </a>

    <button class="menu-toggle" type="button" aria-label="Ouvrir le menu" aria-expanded="false" aria-controls="siteNav">
        <i class="fa-solid fa-bars"></i>
    </button>

    <nav class="site-nav" id="siteNav">
        <a href="/#lieu">Le lieu</a>
        
        <div class="nav-dropdown">
            <button class="nav-dropbtn">
                Nos évasions <i class="fa-solid fa-chevron-down" style="font-size: 0.8em; margin-left: 5px;"></i>
            </button>
            <div class="nav-drop-content">
                <a href="/location-bateaux">Location bateaux</a>
                <a href="/balade-des-3-ports">Balade des 3 ports</a>
                <a href="/location-paddle">Paddle sport</a>
            </div>
        </div>

        <a href="/#cadeau">Carte Cadeau</a>
        <a href="/notre-flotte">Flotte</a>
        <a href="/#reservation" class="site-cta">Réserver</a>
    </nav>
</header>

<script>
    // Header Sticky Effect
    function updateHeader() {
        const siteHeader = document.getElementById('siteHeader');
        if (siteHeader) {
            if (window.scrollY > 30) siteHeader.classList.add('scrolled');
            else siteHeader.classList.remove('scrolled');
        }
    }

    window.addEventListener('scroll', updateHeader);
    // Call once on load in case we start down the page
    window.addEventListener('load', updateHeader);

    // Mobile Menu Toggle
    const siteHeader = document.getElementById('siteHeader');
    const menuToggle = document.querySelector('.menu-toggle');
    const siteNav = document.getElementById('siteNav');

    if (siteHeader && menuToggle && siteNav) {
        // Init header state on first paint
        updateHeader();

        menuToggle.addEventListener('click', () => {
            const isOpen = siteHeader.classList.toggle('open');
            menuToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
        });

        // Close menu when a link is clicked
        siteNav.querySelectorAll('a').forEach((link) => {
            link.addEventListener('click', () => {
                siteHeader.classList.remove('open');
                menuToggle.setAttribute('aria-expanded', 'false');
            });
        });
        
        // Mobile Dropdown Handling
        const dropbtn = document.querySelector('.nav-dropbtn');
        const dropdown = document.querySelector('.nav-dropdown');
        if(dropbtn && dropdown) {
            dropbtn.addEventListener('click', (e) => {
                // Mobile toggle
                dropdown.classList.toggle('active');
            });
        }
    }
</script>

<style>
    /* Dropdown Container */
    .nav-dropdown {
        position: relative;
        display: inline-block;
    }

    /* Dropdown Button (mimics .site-nav a styles from global.css) */
    .nav-dropbtn {
        background: none;
        border: none;
        cursor: pointer;
        font-family: 'Outfit', sans-serif;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 500;
        font-size: 0.95rem;
        color: var(--white);
        opacity: 0.9;
        padding: 0;
        transition: opacity 0.2s ease, color 0.2s ease;
        display: flex;
        align-items: center;
    }
    
    .nav-dropbtn:hover { opacity: 1; }

    /* Update button color when header is scrolled */
    :global(.site-header.scrolled) .nav-dropbtn {
        color: var(--deep-water);
        opacity: 0.85;
    }
    :global(.site-header.scrolled) .nav-dropbtn:hover {
        opacity: 1;
    }

    /* Dropdown Content (Hidden by default) */
    .nav-drop-content {
        display: none;
        position: absolute;
        background-color: var(--white);
        min-width: 220px;
        box-shadow: 0px 10px 30px rgba(0,0,0,0.15);
        z-index: 1001;
        border-radius: 12px;
        top: 100%;
        left: 50%;
        transform: translateX(-50%); /* Centered below text */
        /* overflow: hidden; Removed to allow arrow and bridge */
        margin-top: 15px; /* Increased slightly for visual separation */
        padding: 0; /* Remove padding, use link padding */
        border: 1px solid rgba(0,0,0,0.05);
    }
    
    /* Transparent bridge to prevent menu closing when moving mouse across gap */
    .nav-drop-content::after {
        content: '';
        position: absolute;
        top: -20px; /* Covers the margin gap */
        left: 0;
        width: 100%;
        height: 20px;
        background: transparent;
    }

    /* Small arrow on top of dropdown */
    .nav-drop-content::before {
        content: '';
        position: absolute;
        top: -6px; left: 50%;
        transform: translateX(-50%) rotate(45deg);
        width: 12px; height: 12px;
        background: var(--white);
        border-left: 1px solid rgba(0,0,0,0.05);
        border-top: 1px solid rgba(0,0,0,0.05);
        z-index: 1; /* Ensure arrow is above the bridge if needed, but below text? */
    }

    /* Links inside the dropdown */
    .nav-drop-content a {
        color: var(--deep-water) !important;
        padding: 12px 20px;
        text-decoration: none;
        display: block;
        text-align: left;
        font-size: 0.9rem;
        font-weight: 500;
        text-transform: none; 
        transition: background 0.2s, color 0.2s;
        opacity: 1 !important;
        position: relative;
        z-index: 2; /* Text above arrow */
    }
    
    /* Round corners for first and last items since overflow is not hidden */
    .nav-drop-content a:first-child { border-radius: 12px 12px 0 0; }
    .nav-drop-content a:last-child { border-radius: 0 0 12px 12px; }

    .nav-drop-content a:hover {
        background-color: #f7f9fc;
        color: var(--teal-accent) !important;
    }

    /* Show the dropdown menu on hover */
    .nav-dropdown:hover .nav-drop-content {
        display: block;
        animation: fadeInUp 0.3s ease;
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateX(-50%) translateY(10px); }
        to { opacity: 1; transform: translateX(-50%) translateY(0); }
    }

    /* Mobile Responsive Adjustments */
    @media (max-width: 900px) {
        .nav-dropdown {
            width: 100%;
            text-align: center;
        }
        
        .nav-dropbtn {
            width: 100%;
            justify-content: center;
            padding: 10px 0;
            font-size: 1.1rem; 
        }
        
        .nav-drop-content {
            position: relative;
            top: 0; left: 0;
            transform: none;
            box-shadow: none;
            background: rgba(255,255,255,0.05);
            width: 100%;
            margin-top: 0;
            display: none; 
            border: none;
        }

        .nav-dropdown.active .nav-drop-content {
            display: block;
        }

        .nav-drop-content a {
            color: var(--white) !important; 
            text-align: center;
            padding: 10px;
            font-size: 1rem;
        }
        
        .nav-drop-content::before, .nav-drop-content::after { display: none; }
    }
</style>