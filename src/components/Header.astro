---
const baseUrl = import.meta.env.BASE_URL;
---
<header class="site-header" id="siteHeader">
    <a class="site-brand" href="/" aria-label="Accueil E-co Plaisance">
        <img src={`${baseUrl}logo-ligne.png`} alt="E-co Plaisance" class="site-logo">
    </a>

    <button class="menu-toggle" type="button" aria-label="Ouvrir le menu" aria-expanded="false" aria-controls="siteNav">
        <i class="fa-solid fa-bars" id="menuIcon" aria-hidden="true"></i>
    </button>

    <nav class="site-nav" id="siteNav">
        <a href="/#lieu">Le lieu</a>
        
        <div class="nav-dropdown">
            <button class="nav-dropbtn" type="button" aria-expanded="false" aria-controls="navDropEvasions">
                Nos évasions <i class="fa-solid fa-chevron-down" style="font-size: 0.8em; margin-left: 5px;"></i>
            </button>
            <div class="nav-drop-content" id="navDropEvasions">
                <a href="/location-bateaux">Location bateaux</a>
                <a href="/balade-des-3-ports">Balade des 3 ports</a>
                <a href="/location-paddle">Paddle sport</a>
            </div>
        </div>

        <div class="nav-dropdown">
            <button class="nav-dropbtn" type="button" aria-expanded="false" aria-controls="navDropInfos">
                Infos pratiques <i class="fa-solid fa-chevron-down" style="font-size: 0.8em; margin-left: 5px;"></i>
            </button>
            <div class="nav-drop-content" id="navDropInfos">
                <a href="/tarifs">Tarifs</a>
                <a href="/horaires">Horaires</a>
                <a href="/consignes-navigation">Consignes de navigation</a>
            </div>
        </div>

        <a href="/#cadeau">Carte Cadeau</a>
        <a href="/notre-flotte">Flotte</a>
        <a href="/#reservation" class="site-cta">Réserver</a>
    </nav>

    <button class="nav-backdrop" type="button" aria-label="Fermer le menu" tabindex="-1"></button>
</header>

<script>
    // Header Sticky Effect
    function updateHeader() {
        const headerEl = document.getElementById('siteHeader');
        if (headerEl) {
            if (window.scrollY > 30) headerEl.classList.add('scrolled');
            else headerEl.classList.remove('scrolled');
        }
    }

    window.addEventListener('scroll', updateHeader);
    // Call once on load in case we start down the page
    window.addEventListener('load', updateHeader);

    // Mobile Menu Toggle
    const siteHeader = document.getElementById('siteHeader');
    const menuToggle = document.querySelector<HTMLButtonElement>('.menu-toggle');
    const siteNav = document.getElementById('siteNav');
    const menuIcon = document.getElementById('menuIcon');
    const navBackdrop = document.querySelector<HTMLButtonElement>('.nav-backdrop');

    if (siteHeader && menuToggle && siteNav) {
        const headerEl = siteHeader;
        const menuToggleEl = menuToggle;
        const navEl = siteNav;

        // Init header state on first paint
        updateHeader();

        function setMenuOpen(isOpen) {
            headerEl.classList.toggle('open', isOpen);
            menuToggleEl.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
            menuToggleEl.setAttribute('aria-label', isOpen ? 'Fermer le menu' : 'Ouvrir le menu');
            document.documentElement.classList.toggle('nav-open', isOpen);
            navEl.setAttribute('aria-hidden', isOpen ? 'false' : 'true');

            if (menuIcon) {
                menuIcon.classList.toggle('fa-bars', !isOpen);
                menuIcon.classList.toggle('fa-xmark', isOpen);
            }

            if (!isOpen) {
                // Reset dropdown state when closing
                document.querySelectorAll('.nav-dropdown.active').forEach((el) => el.classList.remove('active'));
                document.querySelectorAll<HTMLButtonElement>('.nav-dropbtn[aria-expanded="true"]').forEach((btn) => {
                    btn.setAttribute('aria-expanded', 'false');
                });
            }
        }

        menuToggleEl.addEventListener('click', () => {
            const isOpen = !headerEl.classList.contains('open');
            setMenuOpen(isOpen);
        });

        // Close menu when a link is clicked
        navEl.querySelectorAll('a').forEach((link) => {
            link.addEventListener('click', () => {
                setMenuOpen(false);
            });
        });
        
        // Mobile Dropdown Handling (supports multiple dropdowns)
        document.querySelectorAll('.nav-dropdown').forEach((dropdownEl) => {
            const dropbtnEl = dropdownEl.querySelector<HTMLButtonElement>('.nav-dropbtn');
            if (!dropbtnEl) return;

            dropbtnEl.addEventListener('click', (e) => {
                // Prevent accidental navigation / keep it a pure toggle
                e.preventDefault();
                // Mobile toggle (and close others)
                const willBeActive = !dropdownEl.classList.contains('active');
                document.querySelectorAll('.nav-dropdown.active').forEach((el) => {
                    if (el !== dropdownEl) el.classList.remove('active');
                });
                dropdownEl.classList.toggle('active', willBeActive);
                // Sync aria
                document.querySelectorAll<HTMLButtonElement>('.nav-dropbtn[aria-expanded="true"]').forEach((btn) => {
                    if (btn !== dropbtnEl) btn.setAttribute('aria-expanded', 'false');
                });
                dropbtnEl.setAttribute('aria-expanded', willBeActive ? 'true' : 'false');
            });
        });

        function closeAllDropdowns() {
            document.querySelectorAll('.nav-dropdown.active').forEach((el) => el.classList.remove('active'));
        }

        // Close dropdowns when clicking outside (desktop/tablet as well)
        document.addEventListener('click', (e) => {
            const target = e.target;
            if (!(target instanceof Node)) return;
            const el = target instanceof Element ? target : null;
            if (el && el.closest('.nav-dropdown')) return;
            closeAllDropdowns();
        });

        if (navBackdrop) {
            navBackdrop.addEventListener('click', () => setMenuOpen(false));
        }

        // Close on outside click (mobile)
        document.addEventListener('click', (e) => {
            if (!headerEl.classList.contains('open')) return;
            const target = e.target;
            if (!(target instanceof Node)) return;
            if (headerEl.contains(target)) return;
            setMenuOpen(false);
        });

        // Close on Escape
        document.addEventListener('keydown', (e) => {
            if (e.key !== 'Escape') return;
            if (headerEl.classList.contains('open')) setMenuOpen(false);
            closeAllDropdowns();
        });

        // Close menu when switching to desktop layout
        window.addEventListener('resize', () => {
            if (window.innerWidth > 900 && headerEl.classList.contains('open')) {
                setMenuOpen(false);
            }
        });
    }
</script>

<style>
    /* Dropdown Container */
    .nav-dropdown {
        position: relative;
        display: inline-block;
    }

    /* Dropdown Button (mimics .site-nav a styles from global.css) */
    .nav-dropbtn {
        background: none;
        border: none;
        cursor: pointer;
        font-family: 'Outfit', sans-serif;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 500;
        font-size: 0.95rem;
        color: var(--white);
        opacity: 0.9;
        padding: 0;
        transition: opacity 0.2s ease, color 0.2s ease;
        display: flex;
        align-items: center;
    }
    
    .nav-dropbtn:hover { opacity: 1; }

    /* Update button color when header is scrolled */
    :global(.site-header.scrolled) .nav-dropbtn {
        color: var(--deep-water);
        opacity: 0.95;
    }
    :global(.site-header.scrolled) .nav-dropbtn:hover {
        opacity: 1;
    }

    /* Dropdown Content (Hidden by default) */
    .nav-drop-content {
        display: none;
        position: absolute;
        background-color: var(--white);
        min-width: 220px;
        box-shadow: 0px 10px 30px rgba(0,0,0,0.15);
        z-index: 1001;
        border-radius: 12px;
        top: 100%;
        left: 50%;
        transform: translateX(-50%); /* Centered below text */
        /* overflow: hidden; Removed to allow arrow and bridge */
        margin-top: 15px; /* Increased slightly for visual separation */
        padding: 0; /* Remove padding, use link padding */
        border: 1px solid rgba(0,0,0,0.05);
    }
    
    /* Transparent bridge to prevent menu closing when moving mouse across gap */
    .nav-drop-content::after {
        content: '';
        position: absolute;
        top: -20px; /* Covers the margin gap */
        left: 0;
        width: 100%;
        height: 20px;
        background: transparent;
    }

    /* Small arrow on top of dropdown */
    .nav-drop-content::before {
        content: '';
        position: absolute;
        top: -6px; left: 50%;
        transform: translateX(-50%) rotate(45deg);
        width: 12px; height: 12px;
        background: var(--white);
        border-left: 1px solid rgba(0,0,0,0.05);
        border-top: 1px solid rgba(0,0,0,0.05);
        z-index: 1; /* Ensure arrow is above the bridge if needed, but below text? */
    }

    /* Links inside the dropdown */
    .nav-drop-content a {
        color: var(--deep-water) !important;
        padding: 12px 20px;
        text-decoration: none;
        display: block;
        text-align: left;
        font-size: 0.9rem;
        font-weight: 500;
        text-transform: none; 
        transition: background 0.2s, color 0.2s;
        opacity: 1 !important;
        position: relative;
        z-index: 2; /* Text above arrow */
    }
    
    /* Round corners for first and last items since overflow is not hidden */
    .nav-drop-content a:first-child { border-radius: 12px 12px 0 0; }
    .nav-drop-content a:last-child { border-radius: 0 0 12px 12px; }

    .nav-drop-content a:hover {
        background-color: #f7f9fc;
        color: var(--teal-accent) !important;
    }

    /* Show the dropdown menu on hover (desktop only) */
    @media (hover: hover) and (pointer: fine) {
        .nav-dropdown:hover .nav-drop-content {
            display: block;
            animation: fadeInUp 0.3s ease;
        }
    }

    /* Touch/tablet: no hover, so allow click-to-open using .active */
    @media (hover: none) {
        .nav-dropdown.active .nav-drop-content {
            display: block;
        }
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateX(-50%) translateY(10px); }
        to { opacity: 1; transform: translateX(-50%) translateY(0); }
    }

    /* Mobile Responsive Adjustments */
    @media (max-width: 900px) {
        .nav-dropdown {
            width: 100%;
            text-align: center;
        }
        
        .nav-dropbtn {
            width: 100%;
            justify-content: space-between;
            padding: 12px 14px;
            font-size: 1rem;
            color: var(--deep-water);
            opacity: 0.95;
            border-radius: 14px;
            background: rgba(10, 26, 43, 0.03);
            border: 1px solid rgba(10, 26, 43, 0.06);
        }

        .nav-dropbtn:hover {
            opacity: 1;
            color: var(--teal-accent);
            background: rgba(44, 110, 118, 0.10);
            border-color: rgba(44, 110, 118, 0.18);
        }
        
        .nav-drop-content {
            position: relative;
            top: 0; left: 0;
            transform: none;
            box-shadow: none;
            background: rgba(10, 26, 43, 0.03);
            width: 100%;
            margin-top: 8px;
            display: block;
            border: 1px solid rgba(10, 26, 43, 0.06);
            border-radius: 14px;
            overflow: hidden;
            max-height: 0;
            opacity: 0;
            pointer-events: none;
            transition: max-height 260ms cubic-bezier(.2,.8,.2,1), opacity 200ms ease;
        }

        .nav-dropdown.active .nav-drop-content {
            max-height: 420px;
            opacity: 1;
            pointer-events: auto;
        }

        .nav-drop-content a {
            color: var(--deep-water) !important;
            text-align: center;
            padding: 10px;
            font-size: 1rem;
        }
        
        .nav-drop-content::before, .nav-drop-content::after { display: none; }
    }
</style>