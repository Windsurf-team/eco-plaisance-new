---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Tarifs 2025 | E-co Plaisance">
    <Header />

    <!-- Hero Section specific for Pricing -->
    <section class="hero-container" style="min-height: 60vh; background: radial-gradient(circle at center, #1a4a5a 0%, #0A1A2B 100%);">
        <div class="hero-content">
            <p class="handwritten hero-subtitle">Port du Teich, Bassin d'Arcachon</p>
            <h1 class="hero-title">TARIFS 2025</h1>
            <p class="hero-lead">Les paiements acceptés : Carte bancaire / Chèques vacances / Espèces</p>
        </div>

        <div class="wave-separator wave-bottom">
            <svg viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
                <path class="fill-white" fill-opacity="1" d="M0,224L48,213.3C96,203,192,181,288,181.3C384,181,480,203,576,224C672,245,768,267,864,261.3C960,256,1056,224,1152,197.3C1248,171,1344,149,1392,138.7L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
            </svg>
        </div>
    </section>

    <section class="details-section" style="padding-top: 100px;">

        <!-- Tarifs bateaux -->
        <div class="detail-block" style="grid-template-columns: 1fr;">
            <div class="detail-text" style="max-width: 1100px; margin: 0 auto;">
                <span class="handwritten" style="color: var(--teal-accent); font-size: 2rem;">Nos bateaux</span>
                <h3>Tarifs par type de bateaux</h3>

                <div class="table-wrap">
                    <table class="price-table">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>1h</th>
                                <th>1h30</th>
                                <th>2h</th>
                                <th>2h30</th>
                                <th>3h</th>
                                <th>3h et + (balade des 3 ports)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>SCOOP 2</td>
                                <td>70 €</td>
                                <td>100 €</td>
                                <td>120 €</td>
                                <td>140 €</td>
                                <td>160 €</td>
                                <td>plus... nous consulter</td>
                            </tr>
                            <tr>
                                <td>LEGEND</td>
                                <td>80 €</td>
                                <td>120 €</td>
                                <td>150 €</td>
                                <td>180 €</td>
                                <td>200 €</td>
                                <td>plus... nous consulter</td>
                            </tr>
                            <tr>
                                <td>OPEN</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>-</td>
                                <td>240 €</td>
                            </tr>
                            <tr>
                                <td>Groupes</td>
                                <td colspan="6">Possibilité de sortie organisée sur plusieurs bateaux, nous consulter...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <p style="margin-top: 14px; opacity: 0.9;">Les prix s'entendent par embarcation, quel que soit le nombre de personnes (possibilités de grouper).</p>
               
            </div>
        </div>

        <!-- Tarifs paddle -->
        <div class="detail-block" style="grid-template-columns: 1fr;">
            <div class="detail-text" style="max-width: 1100px; margin: 0 auto;">
                <span class="handwritten" style="color: var(--teal-accent); font-size: 2rem;">Paddle</span>
                <h3>Tarifs par paddle</h3>

                <div class="table-wrap">
                    <table class="price-table">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>1h</th>
                                <th>1h30</th>
                                <th>2h</th>
                                <th>3h ou +</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Paddle</td>
                                <td>20 €</td>
                                <td>25 €</td>
                                <td>30 €</td>
                                <td>35 €</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <p style="margin-top: 14px; opacity: 0.9;">* Une caution (non encaissée) vous sera demandée pour le prêt du matériel.</p>
            </div>
        </div>

        <!-- Tarifs pack paddle -->
        <div class="detail-block" style="grid-template-columns: 1fr;">
            <div class="detail-text" style="max-width: 1100px; margin: 0 auto;">
                <span class="handwritten" style="color: var(--teal-accent); font-size: 2rem;">Pack</span>
                <h3>Pack Paddle</h3>

                <div class="table-wrap">
                    <table class="price-table">
                        <thead>
                            <tr>
                                <th>Durée</th>
                                <th>1 jour</th>
                                <th>2 jours</th>
                                <th>3 jours</th>
                                <th>4 jours et +</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Pack</td>
                                <td>45 €</td>
                                <td>70 €</td>
                                <td>95 €</td>
                                <td>130 €</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <p style="margin-top: 14px; opacity: 0.9;">* Une caution (non encaissée) vous sera demandée pour le prêt du matériel.</p>
            
            </div>
        </div>

    </section>

    <Footer />
</Layout>

<script>
    // Animation d'entrée du titre
    window.addEventListener('load', () => {
        const heroTitle = document.querySelector('.hero-title') as HTMLElement;
        if(heroTitle) {
            heroTitle.style.opacity = '1';
            heroTitle.style.transform = 'translateY(0)';
        }

        const heroSubtitle = document.querySelector('.hero-subtitle') as HTMLElement;
        if(heroSubtitle) {
            heroSubtitle.style.opacity = '1';
            heroSubtitle.style.transform = 'translateY(0)';
        }
        const heroLead = document.querySelectorAll('.hero-lead');
        heroLead.forEach((el) => {
             (el as HTMLElement).style.opacity = '1';
             (el as HTMLElement).style.transform = 'translateY(0)';
        });
    });
</script>

<style>
    .table-wrap {
        margin-top: 18px;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        border-radius: 14px;
        border: 1px solid rgba(10, 26, 43, 0.10);
        background: rgba(249, 249, 249, 0.98);
    }

    .price-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 780px;
        color: var(--deep-water);
        font-size: 0.95rem;
    }

    .price-table th,
    .price-table td {
        padding: 14px 14px;
        border-bottom: 1px solid rgba(10, 26, 43, 0.08);
        text-align: left;
        vertical-align: top;
    }

    .price-table thead th {
        background: rgba(44, 110, 118, 0.10);
        font-weight: 700;
    }

    .price-table tbody tr:last-child td {
        border-bottom: none;
    }

    .price-table td:first-child,
    .price-table th:first-child {
        width: 160px;
        white-space: nowrap;
    }
</style>
